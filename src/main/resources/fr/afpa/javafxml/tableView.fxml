            </TableView>
            <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2">
               <children>
                  <Label nodeOrientation="LEFT_TO_RIGHT" text="Prénom :">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="firstName" promptText="Prénom..." />
                  <Label text="Nom :" />
                  <TextField fx:id="lastName" promptText="Nom..." />
                  <Label text="Ville :" />
                  <TextField fx:id="city" promptText="Ville..." />
                  <HBox alignment="CENTER" prefHeight="37.0" prefWidth="300.0" spacing="7.0">
